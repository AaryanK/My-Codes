<MessageScreen>:

    MDBoxLayout: 
        orientation: "vertical"
        md_bg_color: app.theme_cls.bg_normal
        MDToolbar: 
            id: logoToolBar
            height: 50
            title: "Dragon"
            halign:"center"
            margin: 0

        ScrollView:
            do_scroll_y:True
            effect_cls:"ScrollEffect"
            bar_width:0
            MDBoxLayout:
                adaptive_height: True
                orientation: 'vertical'
                md_bg_color: app.theme_cls.primary_color
                spacing: 20

                MDBoxLayout:
                    orientation: 'vertical'
                    height:500
                    md_bg_color: app.theme_cls.primary_color
                    size_hint_y: None
                    adaptive_height: True
                    radius: [50, 50, 0, 0]
                    padding: [0, 0, 0, 40]
                    