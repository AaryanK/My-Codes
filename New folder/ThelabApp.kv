WidgetsExample:

<WidgetsExample>: 
    cols: 3
    ToggleButton:
        text: "OFF"
        font_size: "40dp"
        on_state: root.on_toggle(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Click Here"
        font_size: "40dp"
        on_press: root.on_click()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        # font_name: "fonts/Lcd.ttf"
        font_size: "80dp" 
        color: 0,1,1,1
    Switch:
        on_active: root.switch_on(self)
        size_hint: None, 1
        width: "100dp"
    Slider:
        min: 0
        max: 100
        value: 50
        on_value: 
        oreintation: "veritcal"